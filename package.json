{
	"name": "astro",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev --host",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"check": "astro check",
		"prettify": "prettier --write .",
		"test:e2e": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@astrojs/mdx": "^4.3.9",
		"@astrojs/node": "^9.5.0",
		"@astrojs/vue": "^5.1.2",
		"@clerk/astro": "^2.14.3",
		"@clerk/themes": "^2.4.31",
		"@tailwindcss/vite": "^4.1.16",
		"@vueuse/core": "^14.0.0",
		"astro": "^5.15.3",
		"astro-expressive-code": "^0.41.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-vue-next": "^0.552.0",
		"reka-ui": "^2.6.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.16",
		"tw-animate-css": "^1.4.0",
		"vitest": "^4.0.6",
		"vue": "^3.5.22"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.5",
		"@clerk/testing": "^1.13.10",
		"@playwright/test": "^1.56.1",
		"@types/node": "^24.10.0",
		"prettier": "3.6.2",
		"prettier-plugin-astro": "0.14.1"
	},
	"prettier": {
		"printWidth": 80,
		"semi": true,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all",
		"useTabs": true,
		"plugins": [
			"prettier-plugin-astro"
		],
		"overrides": [
			{
				"files": [
					"*.toml",
					"*.yml",
					"*.yaml"
				],
				"options": {
					"useTabs": false
				}
			},
			{
				"files": [
					"*.mdx",
					"*.md"
				],
				"options": {
					"printWidth": 80
				}
			},
			{
				"files": [
					"**/*.astro"
				],
				"options": {
					"parser": "astro"
				}
			}
		]
	}
}

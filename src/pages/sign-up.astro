---
export const prerender = false; // Required for Clerk authentication

import { SignUp as ClerkSignUp } from '@clerk/astro/components';
import { SITE_TITLE } from '@/consts';
import Layout from '@/layouts/Layout.astro';
import type { PageMeta } from '@/types';

const pageMeta: PageMeta = {
	bodyClassList: [],
	description: `Sign up for an account at ${SITE_TITLE} to access exclusive features and stay updated with the latest news.`,
	// image: {},
	// language: "en",
	title: 'Sign Up',
};
---

<Layout pageMeta={pageMeta}>
	<div class="container mx-auto px-4 py-8 max-w-md">
		<ClerkSignUp path="/sign-up" routing="path" signInUrl="/sign-in" />
	</div>
</Layout>
